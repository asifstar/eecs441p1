<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    
    
    <EditText
        android:id="@+id/BroadcastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/BroadcastText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Username" >

        <requestFocus />
    </EditText>
    
    
    <EditText
        android:id="@+id/FriendsID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/BroadcastText"
        android:layout_below="@+id/BroadcastText"
        android:ems="10"
        android:hint="Friend's Username" >

    </EditText>
    
    
    

    <Button
        android:id="@+id/BroadcastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/BroadcastText"
        android:layout_below="@+id/BroadcastText"
        android:text="Broadcast"
        android:visibility="gone" />

    <TextView
        android:id="@+id/BroadcastedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/ConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="CreateSession"
        android:visibility="gone" />

    <Button
        android:id="@+id/getSessionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Join Session"
        android:visibility="gone" />

    <Button
        android:id="@+id/LeaveSessionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Leave Session"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/withBaseFileCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ConnectButton"
        android:layout_alignParentLeft="true"
        android:text="With base file"
        android:visibility="gone" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BroadcastedText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Signin" />


</RelativeLayout>
